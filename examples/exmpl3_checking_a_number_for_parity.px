#using "base"
#using "simac"
#using "inout"
#entry .start

func start(none) {
    var number : Int<1> = zero;

    io::print("Enter a number: ");
    io::scanL('i', number);
    io::print('\n');

    if (number % 2 == 0) =>
        io::print(number, " even number");
    else =>
        io::print(number, " odd number");
    
    exit(0);
    return;
}
